@using TestingApp.Areas.Authentication.Models

@model AuthenticationData
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <body>
      <div>
        <form asp-action="Login" method="post">
            <h3>Вход</h3>
            <p>
                <label asp-for="Login">Login</label>
                <input asp-for="Login"/>
            </p>
            <p>
                <label asp-for="Password">Password</label>
                <input asp-for="Password"/>
            </p>
            <input type="submit" value="Войти"/>
        </form>
        <form asp-action="Registration" method="get">
            <button>Зарегистрироваться</button>
        </form>
        <div>
            @foreach (var error in ViewContext.ViewData.ModelState.Values.SelectMany(p => p.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
      </div>      
    </body>
</html>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>