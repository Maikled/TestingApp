@using TestingApp.Areas.Authentication.Models

@model RegistrationData
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Регистрация - Testing App</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <style>
            body {
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                margin: 0;
                background-color: #f8f9fa;
                font-family: Arial, sans-serif;
            }

            .register-container {
                background: white;
                border: 1px solid #dee2e6;
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                padding: 30px;
                max-width: 400px;
                width: 100%;
                text-align: center;
            }

            .register-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
                font-weight: bold;
            }

            .form-control {
                border-radius: 6px;
            }

            .btn-primary {
                background-color: #0d6efd;
                border: none;
                border-radius: 6px;
                padding: 10px 20px;
            }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

            .register-footer {
                margin-top: 15px;
                font-size: 14px;
            }

            .register-footer a {
                text-decoration: none;
                color: #0d6efd;
            }

            .register-footer a:hover {
                text-decoration: underline;
            }

            .validation-summary {
                color: #dc3545;
                font-size: 14px;
                margin-bottom: 15px;
            }
        </style>
    </head>
    <body>
        <div class="register-container">
            <h1>Testing App</h1>
            <form asp-action="Registration" asp-controller="Authentication" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Имя</label>
                    <input asp-for="Name" class="form-control" id="name" placeholder="Введите ваше имя">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Login" class="form-label">Логин</label>
                    <input asp-for="Login" class="form-control" id="login" placeholder="Введите логин">
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Введите пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Подтверждение пароля</label>
                    <input asp-for="PasswordConfirm" type="password" class="form-control" id="confirmPassword" placeholder="Подтвердите пароль">
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>
            </form>
            <div class="register-footer">
            <p class="mt-3">Уже есть аккаунт? <a href="/Authentication/Login">Войти</a></p>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    </body>
</html>
